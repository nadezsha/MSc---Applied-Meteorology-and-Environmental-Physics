# GHI file for Epanomi using inversion inputs
atmosphere_file /home/nadezsha/libRadtran-2.0.6/data/atmmod/afglms.dat
source solar /home/nadezsha/libRadtran-2.0.6/data/solar_flux/kurudz_1.0nm.dat

wavelength 400 1100
spline 400 1100 1

mol_abs_param SBDART
altitude 0.015
rte_solver sdisort
